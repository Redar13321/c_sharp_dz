<Window x:Class="WpfApp6.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WpfApp6"
		mc:Ignorable="d"
		WindowState ="Maximized"
		Title="MainWindow" Height="730" Width="1100">
	<Window.Resources>
		<Style TargetType="ComboBox">
			<Setter Property="FontSize" Value="30"/>
		</Style>
		<Style TargetType="Button">
			<Setter Property="FontSize" Value="30"/>
		</Style>
		<Style TargetType="TextBlock">
			<Setter Property="FontSize" Value="30"/>
		</Style>
		<Style TargetType="TextBox">
			<Setter Property="FontSize" Value="30"/>
		</Style>
		<Style TargetType="PasswordBox">
			<Setter Property="FontSize" Value="30"/>
		</Style>
		<Style x:Key="PeopleList-Descr" TargetType="Run">
			<Setter Property="FontSize" Value="12"/>
		</Style>
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="0.7*"/>
			<RowDefinition Height="2*"/>
			<RowDefinition Height="0.4*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="2.*"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<TextBlock FontSize="30" Padding="0, 15, 0, 0" HorizontalAlignment="Center" Grid.Column="1" TextAlignment="Center" >
			<Run Foreground="OrangeRed">
				Регистрация
			</Run>
			сотрудников
			<LineBreak/>
			компания
		</TextBlock>

		<GroupBox Grid.Row="1" Padding="10, 10, 10, 10" BorderThickness="0,0,0,0">
			<StackPanel>
				<TextBlock FontSize="24">
					Отзывы на техподдержку
				</TextBlock>

                <ListBox BorderThickness="0,0,0,0" Margin="10, 10, 10, 10">
                    <TextBlock FontSize="22">
						Дёмин Александр Ильич
						<LineBreak/>
						<Run Style="{StaticResource PeopleList-Descr}">
							До него смогли дозвониться
						</Run>
                    </TextBlock>

                    <TextBlock FontSize="22">
						Павлов Анатолий Кринде
						<LineBreak/>
						<Run Style="{StaticResource PeopleList-Descr}">
							Смог дозвониться до техподдержки за 7 минут
						</Run>
                    </TextBlock>

                    <TextBlock FontSize="22">
						Харитонов Шамиль Ерева
						<LineBreak/>
						<Run Style="{StaticResource PeopleList-Descr}">
							Не дозвонился, но решил сам!
						</Run>
                    </TextBlock>


                </ListBox>
			</StackPanel>
		</GroupBox>
		<GroupBox Grid.Row="1" Grid.Column="2" Padding="10, 10, 10, 10" BorderThickness="0,0,0,0">
			<StackPanel>
				<TextBlock FontSize="24">
					Техническая поддержка
				</TextBlock>

                <ListBox BorderThickness="0,0,0,0" Margin="10, 10, 10, 10">
                    <TextBlock FontSize="22">
						Дёмин Александр Ильич
						<LineBreak/>
						<Run Style="{StaticResource PeopleList-Descr}">
							+7 (902) 865-98-66
						</Run>
                    </TextBlock>

                    <TextBlock FontSize="22">
						Жар Агон Адович
						<LineBreak/>
						<Run Style="{StaticResource PeopleList-Descr}">
							+7 (956) 785-87-21
						</Run>
                    </TextBlock>

                    <TextBlock FontSize="22">
						Запальнов Норман Никита
						<LineBreak/>
						<Run Style="{StaticResource PeopleList-Descr}">
							+7 (960) 464-78-30
						</Run>
                    </TextBlock>


                </ListBox>
            </StackPanel>
		</GroupBox>

		<StackPanel Grid.Row="1" Grid.Column="1">
			<TextBlock Text="Логин:"/>
			<TextBox Text="login_user" MaxLines="1"/>
			<TextBlock Text="Пароль:"/>
			<PasswordBox/>
			<TextBlock Text="Повторный пароль:"/>
			<PasswordBox PasswordChar="#"/>
			<TextBlock Text="Должность:"/>
			<ComboBox>
				<ComboBoxItem IsSelected="True" Content="Администратор" />
				<ComboBoxItem Content="Уборщик" />
				<ComboBoxItem Content="Сантехник" />
				<ComboBoxItem Content="Водитель" />
				<ComboBoxItem Content="Менеджер" />
			</ComboBox>
			<TextBlock Text="Комментрий:"/>
			<TextBox VerticalScrollBarVisibility="Visible" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" Height="100">
				про сотрудникова. Это очень информативный комментарий про сотрудника. Это очень информативный комментарий про сотрудника. Это очень информативный комментарий про сотрудника. Это очень информативный комментарий про сотрудника. Это очень информативный комментарий про сотрудника. Это очень информативный комментарий про сотрудника.
			</TextBox>
		</StackPanel>
		<Grid Grid.Row="2" Grid.Column="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Button Margin="10, 10, 10, 10" MaxHeight="120" MaxWidth="230" Background="#FF5AA56C">Зарегестрироваться</Button>
			<Button Margin="10, 10, 10, 10" MaxHeight="120" MaxWidth="230" Grid.Column="1" Background="#FFC85B5B">Отменить</Button>
		</Grid>
	</Grid>
</Window>
